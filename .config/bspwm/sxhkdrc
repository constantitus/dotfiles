# controls the gaps in between windows
super + {equal,minus}
        bspc config window_gap $(($(bspc config window_gap) {-,+} 1))

super + shift + {equal,minus}
        bspc config -n focused window_gap $(($(bspc config -n focused window_gap) {-,+} 3))

super + alt + 3
        bspc config border_width 0 ;
super + alt + 4
        bspc config border_width 1 ;
super + alt + 5
        bspc config border_width 2 ;

# some shit keeps turning my key repeat off
# and I'm too stupid to figure out what is
super + alt + g
        xset r
