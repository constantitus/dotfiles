# reload sxhkd config
super + Escape
	pkill -USR1 -x sxhkd


# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

super + alt + p
        sh ~/.config/bspwm/bin/picom.sh

# 60hz
super + alt + o
        sh ~/.config/bspwm/bin/60hz.sh

# start stop tor service
super + alt + t
				sh ~/.config/bspwm/bin/tor.sh

# redshift
super + alt + i 
				sh ~/.config/bspwm/bin/redshift.sh

# start stop uniconize
super + alt + u
				sh ~/.config/bspwm/bin/uniconize.sh

super + alt + 0
        sh ~/.config/bspwm/bin/performance.sh

super + alt + s
        sh ~/.config/bspwm/bin/floating.sh

super + alt + 9
        redshift -PO 6500 -b 1
super + alt + 8
        redshift -PO 6000 -b 1
super + alt + 7
        redshift -PO 5800 -b 0.9
super + alt + 6 
        redshift -PO 5800 -b 0.7


super + alt + f
        firefox
super + shift + alt + f
